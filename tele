<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>

<div style="display: none !important;">
    <a id="tweet" href="https://twitter.com/intent/tweet?text=" 
        class="twitter-hashtag-button" data-show-count="false">
    Tweet
    </a>
</div>

<script>
	const element = document.getElementById("tweet")
    function tweet(referral) {
        const text = "I was so lucky to receive a big reward from @TicktouchApp. Tick Touch is the first tap to earn ecosystem that helps you earn Usdt, Tokens, Nfts easily and for free. Join now: https://t.me/TickTouchBot?start=" + referral + "\n\n#Ticktouchtoearn"

        element.href = "https://twitter.com/intent/tweet?text=" + encodeURIComponent(text);
        element.click();
    }
</script>
